<style>
.form-container {
  max-width: 800px;
  margin: 0 auto;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  padding: 2rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
}

.form-header {
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #f1f5f9;
}

.form-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #1e293b;
  margin: 0;
  letter-spacing: -0.025em;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.form-grid-full {
  grid-column: 1 / -1;
}

.form-field {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-weight: 600;
  color: #374151;
  margin-bottom: 0.5rem;
  font-size: 0.875rem;
  letter-spacing: 0.025em;
}

.form-input, .form-select, .form-textarea {
  padding: 0.75rem;
  border: 2px solid #e5e7eb;
  border-radius: 8px;
  font-size: 0.875rem;
  transition: all 0.2s;
  background: white;
  font-family: inherit;
}

.form-input:focus, .form-select:focus, .form-textarea:focus {
  outline: none;
  border-color: #0284c7;
  box-shadow: 0 0 0 3px rgba(2, 132, 199, 0.1);
}

.form-textarea {
  min-height: 100px;
  resize: vertical;
}

.form-checkbox-container {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem;
  background: #f8fafc;
  border-radius: 8px;
  border: 2px solid #e5e7eb;
  font-size: 0.875rem;
  height: auto;
}

.form-checkbox {
  width: 1.25rem;
  height: 1.25rem;
  accent-color: #0284c7;
}

.form-checkbox-label {
  font-weight: 500;
  color: #374151;
  margin: 0;
  font-size: 0.875rem;
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-end;
  padding-top: 2rem;
  border-top: 2px solid #f1f5f9;
}

.btn-primary {
  background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  letter-spacing: 0.025em;
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 8px 25px rgba(2, 132, 199, 0.3);
}

.btn-secondary {
  background: #f8fafc;
  color: #64748b;
  padding: 0.75rem 1.5rem;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  letter-spacing: 0.025em;
}

.btn-secondary:hover {
  background: #e2e8f0;
  color: #475569;
}

.error-container {
  background: #fef2f2;
  border: 2px solid #fecaca;
  border-radius: 8px;
  padding: 1.5rem;
  margin-bottom: 2rem;
}

.error-title {
  color: #991b1b;
  font-weight: 600;
  margin-bottom: 1rem;
  font-size: 0.875rem;
}

.error-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.error-item {
  color: #dc2626;
  padding: 0.25rem 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
}

.error-item::before {
  content: "•";
  font-weight: bold;
}

@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .form-container {
    margin: 1rem;
    padding: 1.5rem;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>

<div class="form-container">
  <%= form_with(model: activity, local: true) do |form| %>
    <% if activity.errors.any? %>
      <div class="error-container">
        <h3 class="error-title">
          <%= pluralize(activity.errors.count, "erro") %> impediram que esta atividade fosse salva:
        </h3>
        <ul class="error-list">
          <% activity.errors.each do |error| %>
            <li class="error-item"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-grid">
      <div class="form-field form-grid-full">
        <%= form.label :title, "Título", class: "form-label" %>
        <%= form.text_field :title, class: "form-input", placeholder: "Digite o título da atividade" %>
      </div>

      <div class="form-field form-grid-full">
        <%= form.label :description, "Descrição", class: "form-label" %>
        <%= form.text_area :description, class: "form-textarea", placeholder: "Descreva os detalhes da atividade" %>
      </div>

      <div class="form-field">
        <%= form.label :user_id, "Responsável", class: "form-label" %>
        <%= form.select :user_id, 
            options_from_collection_for_select(User.where(name: ['Carlos Silva', 'Ana Santos', 'Bruno Costa', 'Fernanda Lima', 'Ricardo Oliveira', 'Juliana Pereira', 'Marcos Rodrigues', 'Patrícia Alves', 'Leonardo Martins', 'Camila Ferreira']).order(:name), :id, :name, activity.user_id), 
            { prompt: "Selecione um responsável" }, 
            { class: "form-select" } %>
      </div>

      <div class="form-field">
        <%= form.label :status, "Status", class: "form-label" %>
        <div class="form-checkbox-container">
          <%= form.check_box :status, class: "form-checkbox" %>
          <%= form.label :status, "Atividade ativa", class: "form-checkbox-label" %>
        </div>
      </div>

      <div class="form-field">
        <%= form.label :start_date, "Data de Início", class: "form-label" %>
        <%= form.date_field :start_date, class: "form-input" %>
      </div>

      <div class="form-field">
        <%= form.label :end_date, "Data de Término", class: "form-label" %>
        <%= form.date_field :end_date, class: "form-input" %>
      </div>

      <div class="form-field">
        <%= form.label :kind, "Tipo", class: "form-label" %>
        <%= form.select :kind, 
            options_for_select(Activity::KIND_OPTIONS, activity.kind), 
            { prompt: "Selecione o tipo" }, 
            { class: "form-select" } %>
      </div>

      <div class="form-field">
        <%= form.label :completed_percent, "Progresso (%)", class: "form-label" %>
        <%= form.number_field :completed_percent, class: "form-input", min: 0, max: 100, placeholder: "0-100" %>
      </div>

      <div class="form-field">
        <%= form.label :priority, "Prioridade", class: "form-label" %>
        <%= form.select :priority, 
            options_for_select([['Nível 1 (Alta)', 1], ['Nível 2 (Média)', 2], ['Nível 3 (Baixa)', 3]], activity.priority), 
            { prompt: "Selecione a prioridade" }, 
            { class: "form-select" } %>
      </div>

      <div class="form-field">
        <%= form.label :urgency, "Urgência", class: "form-label" %>
        <%= form.select :urgency, 
            options_for_select(Activity::URGENCY_OPTIONS, activity.urgency), 
            { prompt: "Selecione a urgência" }, 
            { class: "form-select" } %>
      </div>

      <div class="form-field">
        <%= form.label :points, "Pontos", class: "form-label" %>
        <%= form.number_field :points, class: "form-input", min: 1, max: 20, placeholder: "1-20" %>
      </div>
    </div>

    <div class="form-actions">
      <%= link_to "Cancelar", activities_path, class: "btn-secondary" %>
      <%= form.submit activity.persisted? ? "Atualizar Atividade" : "Criar Atividade", class: "btn-primary" %>
    </div>
  <% end %>
</div>
