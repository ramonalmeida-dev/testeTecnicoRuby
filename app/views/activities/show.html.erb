<% content_for :title, @activity.title %>

<style>
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 2rem 1rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
}

.page-header {
  text-align: center;
  margin-bottom: 2rem;
}

.page-title {
  font-size: 2.25rem;
  font-weight: 700;
  background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
  letter-spacing: -0.025em;
}

.page-subtitle {
  color: #64748b;
  font-size: 1rem;
  font-weight: 400;
  letter-spacing: 0.025em;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 2rem;
  justify-content: center;
}

.breadcrumb-link {
  color: #64748b;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
  font-size: 0.875rem;
}

.breadcrumb-link:hover {
  color: #0284c7;
}

.breadcrumb-separator {
  color: #cbd5e1;
  font-weight: 300;
}

.breadcrumb-current {
  color: #0284c7;
  font-weight: 600;
  font-size: 0.875rem;
}

.action-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.btn-primary {
  background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  letter-spacing: 0.025em;
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 8px 25px rgba(2, 132, 199, 0.3);
}

.btn-secondary {
  background: #f8fafc;
  color: #64748b;
  padding: 0.75rem 1.5rem;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  letter-spacing: 0.025em;
}

.btn-secondary:hover {
  background: #e2e8f0;
  color: #475569;
}

.btn-danger {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  letter-spacing: 0.025em;
}

.btn-danger:hover {
  transform: translateY(-1px);
  box-shadow: 0 8px 25px rgba(220, 38, 38, 0.3);
}

.notice-message {
  background: #dcfce7;
  border: 2px solid #bbf7d0;
  color: #166534;
  padding: 1rem 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  text-align: center;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-size: 0.875rem;
}

@media (max-width: 768px) {
  .action-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .btn-primary, .btn-secondary, .btn-danger {
    width: 100%;
    max-width: 300px;
    justify-content: center;
  }
}
</style>

<div class="page-container">
  <% if notice %>
    <div class="notice-message">
      <span><%= notice %></span>
    </div>
  <% end %>

  <div class="page-header">
    <h1 class="page-title">Visualizar Atividade</h1>
    <p class="page-subtitle">Detalhes completos da atividade</p>
  </div>

  <div class="breadcrumb">
    <%= link_to "Atividades", activities_path, class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">›</span>
    <span class="breadcrumb-current">Visualizar</span>
  </div>

  <%= render @activity %>

  <div class="action-buttons">
    <%= link_to "← Voltar", activities_path, class: "btn-secondary" %>
    <%= link_to "Editar", edit_activity_path(@activity), class: "btn-primary" %>
    <%= button_to "Deletar", @activity, method: :delete, 
        class: "btn-danger",
        data: { 
          confirm: "Tem certeza que deseja deletar esta atividade? Esta ação não pode ser desfeita." 
        } %>
  </div>
</div>
