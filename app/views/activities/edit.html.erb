<% content_for :title, "Editando atividade" %>

<style>
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 2rem 1rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
}

.page-header {
  text-align: center;
  margin-bottom: 2rem;
}

.page-title {
  font-size: 2.25rem;
  font-weight: 700;
  background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
  letter-spacing: -0.025em;
}

.page-subtitle {
  color: #64748b;
  font-size: 1rem;
  font-weight: 400;
  letter-spacing: 0.025em;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 2rem;
  justify-content: center;
}

.breadcrumb-link {
  color: #64748b;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
  font-size: 0.875rem;
}

.breadcrumb-link:hover {
  color: #0284c7;
}

.breadcrumb-separator {
  color: #cbd5e1;
  font-weight: 300;
}

.breadcrumb-current {
  color: #0284c7;
  font-weight: 600;
  font-size: 0.875rem;
}

.activity-info {
  background: #f0f9ff;
  border: 2px solid #bae6fd;
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 2rem;
  text-align: center;
}

.activity-info-title {
  font-weight: 600;
  color: #0369a1;
  margin: 0;
  font-size: 0.875rem;
}
</style>

<div class="page-container">
  <div class="page-header">
    <h1 class="page-title">Editar Atividade</h1>
    <p class="page-subtitle">Atualize os dados da atividade</p>
  </div>

  <div class="breadcrumb">
    <%= link_to "Atividades", activities_path, class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">›</span>
    <%= link_to @activity.title, @activity, class: "breadcrumb-link" %>
    <span class="breadcrumb-separator">›</span>
    <span class="breadcrumb-current">Editar</span>
  </div>

  <div class="activity-info">
    <p class="activity-info-title">Editando: "<%= @activity.title %>"</p>
  </div>

  <%= render "form", activity: @activity %>
</div>
